@model CinemaApp.Models.Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4 text-center text-primary">
                        <i class="bi bi-pencil-square me-2"></i> Edit Actor
                    </h3>

                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- 🖼️ عرض الصورة القديمة -->
                        <div class="mb-3 text-center">
                            <label class="fw-semibold">Actor Image:</label>
                            <div>
                                <img id="imgPreview"
                                     src="@(string.IsNullOrEmpty(Model.ActorImage)
                                                                                ? Url.Content("~/Admin/assets/ActorImages/default.png")
                                                                                : Url.Content($"~/Admin/assets/ActorImages/{Model.ActorImage}"))"
                                     alt="@Model.FullName"
                                     class="rounded shadow-sm border"
                                     width="180"
                                     height="180" />
                            </div>
                        </div>

                        <!-- 🆕 اختيار صورة جديدة -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Upload New Image (optional):</label>
                            <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("ImageFile").addEventListener("change", function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById("imgPreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result; // عرض الصورة الجديدة قبل الحفظ
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
