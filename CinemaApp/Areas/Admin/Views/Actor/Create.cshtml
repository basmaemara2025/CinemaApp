@model CinemaApp.Models.Actor

@{
    ViewData["Title"] = "Create Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4 text-center text-primary">
                        <i class="bi bi-person-plus-fill me-2"></i> Add New Actor
                    </h3>

                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- 🖼️ معاينة الصورة قبل الحفظ -->
                        <div class="mb-3 text-center">
                            <label class="fw-semibold">Actor Image:</label>
                            <div>
                                <!-- الصورة الافتراضية -->
                                <img id="imgPreview"
                                     src="~/Admin/assets/ActorImages/default.png"
                                     alt="Preview"
                                     class="rounded shadow-sm border"
                                     width="180"
                                     height="180" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Upload Image:</label>
                            <input type="file" name="ImageFile" id="ImageFile" class="form-control"  />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 🧠 لما يختار المستخدم صورة، تتعرض فورًا قبل الحفظ
        document.getElementById("ImageFile").addEventListener("change", function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById("imgPreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result; // عرض الصورة الجديدة في المعاينة
                };
                reader.readAsDataURL(file);
            } else {
                // لو لغى الاختيار نرجع الصورة الافتراضية
                preview.src = "/Admin/assets/ActorImages/default.png";
            }
        });
    </script>
}
