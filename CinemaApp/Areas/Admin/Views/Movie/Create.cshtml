@model MovieFormViewModel

<div class="container mt-4">
    <h3>Add New Movie</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label>Title</label>
            <input asp-for="Movie.Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea asp-for="Movie.Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input asp-for="Movie.Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Main Image</label>
            <input type="file" name="MainImageFile" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Sub Images (you can select multiple)</label>
            <input type="file" name="SubImageFiles" class="form-control" multiple />
        </div>

        <div class="mb-3">
            <label>Category</label>
            <select asp-for="Movie.CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label>Cinema</label>
            <select asp-for="Movie.CinemaId" class="form-control">
                <option value="">-- Select Cinema --</option>
                @foreach (var cin in Model.Cinemas)
                {
                    <option value="@cin.Id">@cin.Name</option>
                }
            </select>
        </div>

        <div class="form-check form-switch mb-3">
            <input asp-for="Movie.IsTopMovie" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Top Movie</label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
